{
  "app-id": "com.adilhanney.timing.timing_flutter",
  "runtime": "org.freedesktop.Platform",
  "runtime-version": "21.08",
  "sdk": "org.freedesktop.Sdk",
  "command": "timing_flutter",
  "separate-locales": false,
  "finish-args": [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri",
    "--socket=pulseaudio"
  ],
  "modules": [
    {
      "name": "timing_flutter",
      "buildsystem": "simple",
      "only-arches": [
        "x86_64"
      ],
      "build-commands": [
        "mkdir -p TimingFlutter",
        "tar -xf TimingFlutter-Linux-Portable.tar.gz -C TimingFlutter",
        "cp -r TimingFlutter /app/",
        "chmod +x /app/TimingFlutter/timing_flutter",
        "mkdir -p /app/bin",
        "ln -s /app/TimingFlutter/timing_flutter /app/bin/timing_flutter",
        "mkdir -p /app/share/metainfo",
        "cp -r com.adilhanney.timing.timing_flutter.metainfo.xml /app/share/metainfo/",
        "mkdir -p /app/share/icons/hicolor/scalable/apps",
        "cp -r icon.svg /app/share/icons/hicolor/scalable/apps/com.adilhanney.timing.timing_flutter.svg",
        "mkdir -p /app/share/applications",
        "cp -r com.adilhanney.timing.timing_flutter.desktop /app/share/applications/",
        "mkdir -p /app/share/appdata",
        "cp -r com.adilhanney.timing.timing_flutter.metainfo.xml /app/share/appdata/"
      ],
      "sources": [
        {
          "type": "file",
          "path": "com.adilhanney.timing.timing_flutter.metainfo.xml"
        },
        {
          "type": "file",
          "path": "com.adilhanney.timing.timing_flutter.desktop"
        },
        {
          "type": "file",
          "path": "../assets/icon/icon.svg"
        },
        {
          "type": "file",
          "path": "../TimingFlutter-Linux-Portable.tar.gz"
        }
      ]
    }
  ]
}